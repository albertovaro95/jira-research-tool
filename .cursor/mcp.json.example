{
  "mcpServers": {
    "jira": {
      "command": "npx",
      "args": [
        "-y",
        "@mcp-devtools/jira"
      ],
      "env": {
        "JIRA_URL": "https://tu-empresa.atlassian.net",
        "JIRA_API_MAIL": "tu-email@ejemplo.com",
        "JIRA_API_KEY": "TU_TOKEN_AQUI"
      }
    },
    "github": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "TU_TOKEN_AQUI"
      }
    }
  }
}
